<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Source Audio"
            android:textSize="@dimen/headline"
            android:textColor="@color/light_primary_text"
            android:gravity="center"
            android:background="@color/primary"
            android:id="@+id/examplePassageLinkText" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_above="@+id/linearLayout"
            android:layout_below="@+id/examplePassageLinkText"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Source audio could not be found in the default location. If you would like Source Audio to use with your project, please select a source language and then find the corresponding Source Audio folder on your device or SD card using the buttons below."                android:textColor="@color/dark_primary_text"
                    android:textSize="@dimen/title"
                    android:gravity="center" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Source Language"
                        android:id="@+id/source_language_btn"
                        style="@style/Widget.Button.Blue"
                        android:layout_marginTop="16dp"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Source Location"
                        android:id="@+id/source_location_btn"
                        style="@style/Widget.Button.Blue"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout"
            android:weightSum="2"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:id="@+id/continue_btn"
                style="@style/Widget.Button" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>