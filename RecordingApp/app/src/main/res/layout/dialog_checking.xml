<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <wycliffeassociates.recordingapp.widgets.FourStepImageView
            android:id="@+id/check_level_one"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_unit_card_check_level"
            android:padding="@dimen/default_padding_m"
            />

        <wycliffeassociates.recordingapp.widgets.FourStepImageView
            android:id="@+id/check_level_two"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_unit_card_check_level"
            android:padding="@dimen/default_padding_m"
            />

        <wycliffeassociates.recordingapp.widgets.FourStepImageView
            android:id="@+id/check_level_three"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_unit_card_check_level"
            android:padding="@dimen/default_padding_m"
            />

    </LinearLayout>

</FrameLayout>