<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fda93d"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <wycliffeassociates.recordingapp.CanvasView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/minimap"
            android:layout_weight=".1"
            android:background="#fffd7b2d" />

        <wycliffeassociates.recordingapp.CanvasView
            android:id="@+id/signature_canvas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#FFFFFF"
            android:layout_weight=".60" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            class="android.support.v4.widget.Space"
            android:id="@+id/view2"
            android:layout_weight=".3" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FrameLayout">

        <ImageButton
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="171dp"
            android:layout_height="171dp"
            android:id="@+id/btnRecord"
            android:background="@drawable/ic_album_white_48dp"
            android:focusable="false"
            android:cropToPadding="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:layout_gravity="left|bottom"
            android:visibility="visible"
            android:src="@drawable/ic_album_white_48dp"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="56dp" />

        <ImageButton
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStop"
            android:background="@drawable/stop"
            android:focusable="false"
            android:cropToPadding="true"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="68dp" />

        <ImageButton
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlay"
            android:background="@drawable/ic_play_arrow_white_48dp"
            android:focusable="false"
            android:cropToPadding="true"
            android:layout_alignStart="@+id/btnSave"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="56dp" />

        <ImageButton
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:background="@drawable/ic_save_white_48dp"
            android:focusable="false"
            android:cropToPadding="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|top" />

        <Button
            android:layout_width="393dp"
            android:layout_height="184dp"
            android:text="Pause"
            android:id="@+id/btnPause"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

</FrameLayout>