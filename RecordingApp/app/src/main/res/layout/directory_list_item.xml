<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/default_padding_m"
        android:layout_marginTop="@dimen/default_padding_m"
        android:layout_marginRight="@dimen/default_padding_m"
        card_view:cardCornerRadius="@dimen/default_padding_xxs"
        card_view:cardBackgroundColor="@color/card_bg"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clickable="true"
            android:paddingTop="24dp"
            android:paddingBottom="24dp" >

            <ImageView
                android:id="@+id/directoryImage"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="#00000000"
                android:src="@drawable/ic_purple_folder_56" />

            <TextView
                android:id="@+id/filename"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="28"
                android:text="aa-bbbb-c"
                android:textColor="@color/primary_dark_font"
                android:textSize="@dimen/heading_1"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/default_padding_s" />

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="28"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/default_padding_s" >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015/10/30"
                    android:textColor="@color/primary_dark_font"
                    android:textSize="@dimen/heading_1"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00:00"
                    android:layout_below="@id/date"
                    android:textColor="@color/primary_dark_font"
                    android:textSize="@dimen/heading_2"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="#00000000"
                android:gravity="center" >

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:button="@drawable/ic_check_box_empty" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>