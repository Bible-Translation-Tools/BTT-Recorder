<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding_m"
        android:id="@+id/base_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verse_text_view"
            android:text="Verse 1"
            android:textSize="@dimen/title"
            android:textColor="@color/primary_text_default_material_light"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_microphone_grey600_36dp"
                android:id="@+id/record_button"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_play_blue"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/default_padding_m"
                android:visibility="visible"
                />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/expanded_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/playback"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding_m"
            android:layout_marginTop="@dimen/default_padding_m"
            >

            <TextView
                android:id="@+id/timeProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@color/primary_text_default_material_light"
                android:layout_gravity="center_vertical|right"
                />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/default_padding_m"
                android:layout_marginEnd="@dimen/default_padding_m"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/timeDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="00:00:00"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="@dimen/abc_text_size_small_material"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/take_actions"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding_m"
            android:paddingStart="42dp"
            android:paddingEnd="42dp"
            android:weightSum="100"
            >

            <FrameLayout
                android:id="@+id/delete_take_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center_vertical"
                >

                <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_grey600_36dp"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/extra_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center_vertical"
                >

            </FrameLayout>

            <FrameLayout
                android:id="@+id/play_pause_take_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center_vertical"
                >

                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_play_blue"
                    android:visibility="visible"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    />

                <ImageButton
                    android:id="@+id/pauseButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_pause_black_48dp"
                    android:visibility="invisible"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/edit_take_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center_vertical"
                >

                <ImageButton
                    android:id="@+id/edit_take_button"
                    android:src="@drawable/ic_minimap_wave_gray"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitXY"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center_vertical"
                >

            </FrameLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/take_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding_m"
            android:background="@drawable/border_top"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dec_take"
                android:src="@drawable/chevron_left"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/take_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take 1 of 10"
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/dark_secondary_text"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inc_take"
                android:src="@drawable/chevron_right"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
