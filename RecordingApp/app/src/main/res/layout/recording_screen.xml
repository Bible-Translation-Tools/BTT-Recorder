<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_screen_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <!-- TODO: Placed here to avoid errors. Remove if not needed anymore-->
    <wycliffeassociates.recordingapp.AudioVisualization.MinimapView
        android:id="@+id/minimap"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toolbar"
        android:background="#0A0A0A">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/volumeBar"
            android:padding="8dp"
            android:layout_alignParentEnd="true" />

        <view
            class="wycliffeassociates.recordingapp.AudioVisualization.WaveformView"
            android:id="@+id/main_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/volumeBar"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Chunk"
            android:id="@+id/btnIncChunk"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/filenameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John 1:1-3 (Afaraf)"
                android:textColor="@color/text_light"
                android:textSize="24sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/timerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/text_light"
                android:textSize="32sp"
                android:padding="4dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_record"
            android:layout_centerInParent="true"
            android:background="#00000000" />

        <ImageButton
            android:id="@+id/btnPauseRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_record_pause"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>