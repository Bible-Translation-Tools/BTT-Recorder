<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playback_screen_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <wycliffeassociates.recordingapp.AudioVisualization.MinimapView
        android:id="@+id/minimap"
        android:layout_height="84dp"
        android:layout_width="match_parent"
        android:background="@color/minimap_bg" />

    <RelativeLayout
        android:id="@+id/canvas_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minimap"
        android:layout_above="@+id/toolbar"
        android:background="#0A0A0A">

        <view
            class="wycliffeassociates.recordingapp.AudioVisualization.WaveformView"
            android:id="@+id/main_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <wycliffeassociates.recordingapp.Playback.MarkerView
            android:id="@+id/startmarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusDown="@+id/endmarker"
            android:src="@drawable/ic_in_marker_green"
            android:layout_alignParentTop="true"/>

        <wycliffeassociates.recordingapp.Playback.MarkerView
            android:id="@+id/endmarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusDown="@+id/info"
            android:nextFocusUp="@+id/startmarker"
            android:src="@drawable/ic_out_marker_red"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/file_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/filenameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert File Name"
                android:textColor="@color/text_light"
                android:textSize="24sp"
                android:padding="4dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/timerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="@color/text_light"
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/durationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ 00:00:00"
                    android:textColor="@color/text_light"
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:id="@+id/relativeLayout">

            <ImageButton
                android:id="@+id/btnSkipBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skip_back"
                android:background="#00000000"
                android:layout_marginRight="16dp"/>

            <RelativeLayout
                android:id="@+id/playPauseContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnSkipBack">

                <ImageButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_white"
                    android:background="#00000000" />

                <ImageButton
                    android:id="@+id/btnPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pause_white_48dp"
                    android:background="#00000000"
                    android:visibility="visible"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/btnSkipForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/playPauseContainer"
                android:src="@drawable/ic_skip_forward"
                android:background="#00000000"
                android:layout_marginLeft="16dp"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnRerecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_record"
            android:background="#00000000"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_toEndOf="@id/file_info_container" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btnSave"
            android:layout_marginEnd="16dp">

            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/ic_undo_white_48dp"
                android:background="#00000000"
                android:layout_marginRight="16dp"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/ic_clear_markers"
                android:background="#00000000"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@id/btnUndo"/>

            <RelativeLayout
                android:id="@+id/startEndMarkerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnClear">

                <ImageButton
                    android:id="@+id/btnStartMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_start_marker"
                    android:background="#00000000"
                    android:layout_marginRight="16dp"/>

                <ImageButton
                    android:id="@+id/btnEndMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@drawable/ic_out_marker"
                    android:background="#00000000"
                    android:layout_marginRight="16dp"/>

                <ImageButton
                    android:id="@+id/btnCut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@drawable/ic_cut"
                    android:background="#00000000"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save_white"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>