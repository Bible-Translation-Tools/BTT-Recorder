<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playback_screen_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <wycliffeassociates.recordingapp.AudioVisualization.MinimapView
        android:id="@+id/minimap"
        android:layout_height="84dp"
        android:layout_width="match_parent"
        android:background="@color/minimap_bg" />

    <RelativeLayout
        android:id="@+id/canvas_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minimap"
        android:layout_above="@+id/toolbar"
        android:background="#0A0A0A">

        <view
            class="wycliffeassociates.recordingapp.AudioVisualization.WaveformView"
            android:id="@+id/main_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <wycliffeassociates.recordingapp.Playback.MarkerView
            android:id="@+id/startmarker"
            android:nextFocusDown="@+id/endmarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/marker_left"/>

        <wycliffeassociates.recordingapp.Playback.MarkerView
            android:id="@+id/endmarker"
            android:nextFocusUp="@+id/startmarker"
            android:nextFocusDown="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/marker_right"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toolbar">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Marker"
            android:id="@+id/btnEndMark"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnStartMark"
            android:textColor="@color/off_white" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Marker"
            android:id="@+id/btnStartMark"
            android:layout_alignTop="@+id/btnEndMark"
            android:layout_toEndOf="@+id/filenameView"
            android:textColor="@color/off_white" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cut"
            android:id="@+id/btnCut"
            android:layout_alignTop="@+id/btnEndMark"
            android:layout_toEndOf="@+id/btnEndMark"
            android:textColor="@color/off_white" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Markers"
            android:id="@+id/btnClear"
            android:layout_alignTop="@+id/btnCut"
            android:layout_toEndOf="@+id/btnEndMark"
            android:textColor="@color/off_white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:id="@+id/btnUndo" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/file_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/filenameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John 1:1-3 (Afaraf)"
                android:textColor="@color/text_light"
                android:textSize="24sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/timerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/text_light"
                android:textSize="32sp"
                android:padding="4dp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/btnSkipBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skip_back"
                android:background="#00000000"
                android:layout_marginRight="16dp"/>

            <RelativeLayout
                android:id="@+id/playPauseContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnSkipBack">

                <ImageButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_white"
                    android:background="#00000000" />

                <ImageButton
                    android:id="@+id/btnPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pause_white_48dp"
                    android:background="#00000000"
                    android:visibility="visible"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/btnSkipForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/playPauseContainer"
                android:src="@drawable/ic_skip_forward"
                android:background="#00000000"
                android:layout_marginLeft="16dp"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>