<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_bg" >

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageButton
                android:id="@+id/btnSortName"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:background="#00000000"
                android:src="@drawable/ic_sort_alpha"
                android:backgroundTint="#FFFFFFAA" />

            <ImageButton
                android:id="@+id/btnSortDuration"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="#00000000"
                android:src="@drawable/ic_sort_length" />

            <ImageButton
                android:id="@+id/btnSortDate"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="#00000000"
                android:src="@drawable/ic_sort_date" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:background="#00000000"
                android:gravity="center" >

                <CheckBox
                    android:id="@+id/btnCheckAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:button="@drawable/ic_select_all_empty" />

            </LinearLayout>

            <!--<ImageButton-->
            <!--android:id="@+id/btnDelete"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/ic_delete_white_48dp"-->
            <!--android:background="#00000000"/>-->

        </LinearLayout>


        <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="#ff413e3a"-->
            <!--android:elevation="31dp"-->
            <!--android:id="@+id/WavePreview"-->
            <!--android:minHeight="100dp">-->
        <!--</LinearLayout>-->

        <ListView
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/top_bar"
            android:background="@color/primary_bg"
            android:divider="#00000000"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:animateLayoutChanges="true"
            >
        </ListView>

        <!--<LinearLayout-->
            <!--android:id="@+id/linearLayout1"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="#ff8da793"-->
            <!--android:minHeight="40dp">-->
        <!--</LinearLayout>-->

        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/btnExport"-->
            <!--android:background="@drawable/ic_export_icon_share_83" />-->

    </RelativeLayout>

    <!-- The navigation drawer -->
    <LinearLayout android:id="@+id/right_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff81c784">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="#ffbee3c4"
                android:elevation="60dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnExportApp"
                    android:src="@drawable/export_app"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnExportFTP"
                    android:src="@drawable/export_ftp"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnExportFolder"
                    android:src="@drawable/export_folder"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAmazonS3"
                    android:src="@drawable/export_s3"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>