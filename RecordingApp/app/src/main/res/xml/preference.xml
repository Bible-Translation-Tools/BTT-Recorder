<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Translation Recorder Settings"
        android:key="pref_key_app_settings"
        android:layout="@layout/custom_pref_category">

        <ListPreference
            android:key="pref_chunk_verse"
            android:layout="@layout/custom_pref"
            android:title="Chunk or Verse"
            android:entries="@array/chunk_verse_entries"
            android:entryValues="@array/chunk_verse_values"
            android:defaultValue="chunk" />

        <!--Not sure the default should be in the strings file; do other languages change directory text? -->
        <PreferenceScreen
            android:key="pref_src_loc"
            android:layout="@layout/custom_pref"
            android:title="Source Audio Location"
            android:summary="/storage/emulated/0/TranslationRecorder"
            android:defaultValue="/storage/emulated/0/TranslationRecorder">
            <intent
                android:action="wycliffeassociates.recordingapp.SettingsPage.SELECT_SRC_INTENT">
            </intent>
        </PreferenceScreen>


    </PreferenceCategory>

    <PreferenceCategory
        android:title="File Name Settings"
        android:key="pref_key_file_name_lang"
        android:layout="@layout/custom_pref_category">

        <PreferenceScreen
            android:key="pref_lang_src"
            android:layout="@layout/custom_pref"
            android:title="Source Language"
            android:summary="@string/pref_default_lang"
            android:defaultValue="@string/pref_default_lang">
            <intent android:action="wycliffeassociates.recordingapp.SettingsPage.LANGUAGE_INTENT">
                <extra android:name="lang_type" android:value="source" />
            </intent>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="pref_lang"
            android:layout="@layout/custom_pref"
            android:title="Target Language"
            android:summary="@string/pref_default_lang"
            android:defaultValue="@string/pref_default_lang">
            <intent android:action="wycliffeassociates.recordingapp.SettingsPage.LANGUAGE_INTENT">
                <extra android:name="lang_type" android:value="target" />
            </intent>
        </PreferenceScreen>


