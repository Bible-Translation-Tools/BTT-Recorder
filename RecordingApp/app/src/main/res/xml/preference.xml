        <ListPreference
            android:key="pref_source"
            android:layout="@layout/custom_pref"
            android:title="Source"
            android:entries="@array/source_entries"
            android:entryValues="@array/source_values"
            android:defaultValue="udb" />

        <PreferenceScreen
            android:key="pref_book"
            android:layout="@layout/custom_pref"
            android:title="Book"
            android:summary="@string/pref_default_book">
            <intent
                android:action="wycliffeassociates.recordingapp.SettingsPage.BOOK_INTENT">
