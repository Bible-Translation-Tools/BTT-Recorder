<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="File Name"
        android:key="pref_key_file_name_lang"
        android:layout="@layout/custom_pref_category">

        <wycliffeassociates.recordingapp.SettingsPage.AutoCompletePreference
            android:key="pref_lang"
            android:layout="@layout/custom_pref"
            android:title="Language"
            android:summary=""
            android:defaultValue="@string/pref_default_lang"
            android:inputType="text"
            android:imeOptions="actionDone"/>

        <wycliffeassociates.recordingapp.SettingsPage.AutoCompletePreference
            android:key="pref_book"
            android:layout="@layout/custom_pref"
            android:title="Book"
            android:summary=""
            android:defaultValue="@string/pref_default_book"
            android:inputType="text"
            android:imeOptions="actionDone"/>

        <ListPreference
            android:key="pref_chapter"
            android:layout="@layout/custom_pref"
            android:title="Chapter"
            android:summary=""
            android:entries="@array/chapter_values"
            android:entryValues="@array/chapter_values"
            android:defaultValue="1" />

        <ListPreference
            android:key="pref_chunk"
            android:layout="@layout/custom_pref"
            android:title="Chunk"
            android:summary=""
            android:entries="@array/chunk_values"
            android:entryValues="@array/chunk_values"
            android:defaultValue="1" />

        <EditTextPreference
            android:key="pref_take"
            android:layout="@layout/custom_pref"
            android:title="Take"
            android:summary=""
            android:defaultValue="@string/pref_default_take"
            android:inputType="number"
            android:imeOptions="actionDone"/>

    </PreferenceCategory>

