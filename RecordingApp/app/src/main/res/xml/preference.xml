            <!--android:key="pref_lang"-->
            <!--android:layout="@layout/custom_pref"-->
            <!--android:title="Language"-->
            <!--android:summary=""-->
            <!--android:defaultValue="@string/pref_default_lang"-->
            <!--android:inputType="text"-->
            <!--android:imeOptions="actionDone"/>-->

        <ListPreference
            android:key="pref_source"
            android:layout="@layout/custom_pref"
            android:title="Source"
            android:entries="@array/source_entries"
            android:entryValues="@array/source_values"
            android:summary="udb"
            android:defaultValue="udb" />

        <PreferenceScreen
            android:key="pref_book"
            android:layout="@layout/custom_pref"
            android:title="Book"
            android:summary="@string/pref_default_book"
            android:defaultValue="@string/pref_default_book">
            <intent
                android:action="wycliffeassociates.recordingapp.SettingsPage.BOOK_INTENT">
            </intent>
        </PreferenceScreen>

        <!--<wycliffeassociates.recordingapp.SettingsPage.AutoCompletePreference-->
            <!--android:key="pref_book"-->
            <!--android:layout="@layout/custom_pref"-->
            <!--android:title="Book"-->
            <!--android:summary=""-->
            <!--android:defaultValue="@string/pref_default_book"-->
            <!--android:inputType="text"-->
            <!--android:imeOptions="actionDone"/>-->

        <wycliffeassociates.recordingapp.SettingsPage.ChapterChunkListPreference
            android:key="pref_chapter"
            android:layout="@layout/custom_pref"
            android:title="Chapter"
            android:entries="@array/chapter_values"
            android:entryValues="@array/chapter_values"
            android:summary="1"
            android:defaultValue="1" />

        <wycliffeassociates.recordingapp.SettingsPage.ChapterChunkListPreference
            android:key="pref_chunk"
            android:layout="@layout/custom_pref"
            android:title="Chunk"
            android:entries="@array/chunk_values"
            android:entryValues="@array/chunk_values"
            android:summary="1"
            android:defaultValue="1" />

        <wycliffeassociates.recordingapp.SettingsPage.ChapterChunkListPreference
            android:key="pref_verse"
            android:layout="@layout/custom_pref"
            android:title="Verse"
            android:entries="@array/verse_values"
            android:entryValues="@array/verse_values"
            android:defaultValue="1"
            android:summary="1"
            android:enabled="false" />

        <EditTextPreference
            android:key="pref_take"
            android:layout="@layout/custom_pref"
            android:title="Take"
            android:summary="1"
            android:defaultValue="@string/pref_default_take"
            android:inputType="number"
            android:imeOptions="actionDone"
            />

        <EditTextPreference
            android:key="pref_filename"
            android:layout="@layout/custom_pref"
            android:title="File Name"
            android:defaultValue="en_udb_gen_01-01_01"
            android:summary="en_udb_gen_01-01_01"
            android:editable="false"
            android:enabled="false"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Translation Recorder Version"
        android:key="pref_key_app_version"
        android:layout="@layout/custom_pref_category">
        <EditTextPreference
            android:key="version"
            android:title="Version"
            android:enabled="false"
            android:selectable="false"
            android:persistent="false"
            android:shouldDisableView="false"/>
    </PreferenceCategory>


    <PreferenceCategory
        android:title="Profile"
        android:key="profile"
        android:layout="@layout/custom_pref_category">
        <Preference
            android:key="pref_profile"
            android:title="Logout"
            android:summary="">
        </Preference>
    </PreferenceCategory>
