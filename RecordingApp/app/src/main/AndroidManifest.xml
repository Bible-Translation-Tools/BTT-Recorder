<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="wycliffeassociates.recordingapp">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />


    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<activity android:name=".MainMenu" />-->
        <activity android:name=".Recording.RecordingScreen" android:screenOrientation="landscape" android:noHistory="true"/>
        <activity android:name=".Playback.PlaybackScreen" android:screenOrientation="landscape"/>
        <activity android:name=".MainMenu" />
        <activity android:name=".FilesPage.AudioFiles" />
        <activity android:name=".SettingsPage.Settings"
            android:windowSoftInputMode="stateUnchanged"/>

        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />

        <activity android:name=".SettingsPage.LanguageActivity">
            <intent-filter>
            <action android:name="wycliffeassociates.recordingapp.SettingsPage.LANGUAGE_INTENT" />
            <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsPage.ProjectActivity">
            <intent-filter>
                <action android:name="wycliffeassociates.recordingapp.SettingsPage.PROJECT_INTENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsPage.BookActivity">
            <intent-filter>
                <action android:name="wycliffeassociates.recordingapp.SettingsPage.BOOK_INTENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsPage.SelectSourceDirectory">
            <intent-filter>
                <action android:name="wycliffeassociates.recordingapp.SettingsPage.SELECT_SRC_INTENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsPage.ModeActivity" />
        <activity android:name=".SettingsPage.SourceTextActivity" />
        <activity android:name=".SettingsPage.SourceAudioActivity" />

        <activity android:name=".FilesPage.ExportFiles" />
        <service android:name=".Recording.WavRecorder" />
        <service android:name=".Recording.WavFileWriter" />
        <activity android:name=".FilesPage.Export.FolderExport$StorageAccess" />
        <activity android:name=".FilesPage.Export.AppExport$ShareZipToApps"/>
        <activity android:name=".FilesPage.FTPActivity" android:theme="@style/Theme.UserDialog"/>
        <activity android:name=".SettingsPage.connectivity.LanguageNamesRequest" />

        <activity android:name="com.door43.login.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.door43.login.RegisterDoor43Activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.door43.login.RegisterOfflineActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.door43.login.TermsOfUseActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.door43.login.LoginDoor43Activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.door43.login.legal.LegalDocumentActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />

    </application>

</manifest>
