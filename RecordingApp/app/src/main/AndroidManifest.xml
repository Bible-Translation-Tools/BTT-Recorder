<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="wycliffeassociates.recordingapp">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />


    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TR.NoActionBar"
        tools:replace="android:theme"
        >

        <!-- Splash screen -->
        <activity android:name=".SplashScreen"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity android:name=".MainMenu" />

        <!-- Other activities -->
        <activity android:name=".Recording.RecordingScreen"
            android:screenOrientation="landscape"
            android:noHistory="true"
            />

        <activity android:name=".Playback.PlaybackScreen"
            android:screenOrientation="landscape"
            />

        <activity android:name=".FilesPage.AudioFiles"
            />

        <activity android:name=".SettingsPage.Settings"
            android:theme="@style/TR"
            />
        <activity android:name=".SettingsPage.connectivity.LanguageNamesRequest"
            />

        <activity android:name=".ProjectManager.ActivityProjectManager"
            />
        <activity android:name=".ProjectManager.ActivityChapterList"
            />
        <activity android:name=".ProjectManager.ActivityUnitList"
            />

        <activity android:name=".project.SourceAudioActivity"
            android:theme="@style/TR"
            />
        <activity android:name=".project.ProjectWizardActivity"
            android:theme="@style/TR"
            />

        <!-- ?? -->
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />
        <activity android:name=".FilesPage.ExportFiles" />
        <activity android:name=".FilesPage.Export.FolderExport$StorageAccess" />
        <activity android:name=".FilesPage.Export.AppExport$ShareZipToApps"/>


        <activity android:name="com.door43.login.ProfileActivity" />
        <activity android:name="com.door43.login.RegisterDoor43Activity" />
        <activity android:name="com.door43.login.RegisterOfflineActivity" />
        <activity android:name="com.door43.login.TermsOfUseActivity" />
        <activity android:name="com.door43.login.LoginDoor43Activity" />
        <activity android:name="com.door43.login.legal.LegalDocumentActivity" />


        <service android:name=".Recording.WavRecorder" />
        <service android:name=".Recording.WavFileWriter" />
        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />

    </application>

</manifest>
